{
  "files.eol": "\n",
  "files.encoding": "utf8",
  "workbench.iconTheme": "vscode-icons",
  "workbench.colorTheme": "Monokai",
  // Rubyファイルに対してRuby LSPをフォーマッタとして設定
  "[ruby]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.defaultFormatter": "Shopify.ruby-lsp",
    "editor.formatOnSave": true
  },

  // Ruby LSP拡張の設定（必要に応じて）
  "rubyLsp.enabledFeatures": {
    "diagnostics": true,
    "codeActions": true,
    "documentSymbols": true,
    "formatting": true,
    "inlayHints": true,
    "semanticHighlighting": true,
    "completion": true,
    "definition": true,
    "hover": true,
    "signatureHelp": true
  },

  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/tmp":true,
    // "**/vendor/":true
  },

  "sorbet.enabled": true,
  // "sorbet.useBundler": true,
  // "sorbet.pathToSorbet": "bundle exec srb"
}